.response-form.link
  %h2 Sign up
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = f.error_notification
    .form-inputs
      = f.input :name,
        required: true
      = f.input :email,                      
        required: true,                      
        autofocus: true,                     
        input_html: { autocomplete: "email" }
      = f.input :gender, collection: ['male', 'female', 'transgender']
      = f.input :orientation, collection:['straight', 'gay', 'lesbian', 'bisexual']
      = f.input :age, collection: (18..150)
      = f.input :country
      = f.input :looking_for, collection: ['male', 'female', 'other', 'lesbian', 'gay', 'bisexual', 'transgender']
      = f.input :interests
      = f.input :password,                                                                   
        required: true,                                                                      
        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
        input_html: { autocomplete: "new-password" }                                         
      = f.input :password_confirmation,             
        required: true,                             
        input_html: { autocomplete: "new-password" }
      = f.input :image, label: 'profile picture'
    .form-actions
      = f.button :submit, "Sign up"
