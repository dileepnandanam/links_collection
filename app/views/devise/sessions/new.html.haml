.response-form.link
  %h2 Log in
  = simple_form_for(User.new, as: 'User', url: session_path(User.new)) do |f|
    .form-inputs
      = f.input :email,                      
        required: false,                     
        autofocus: true,                     
        input_html: { autocomplete: "email" }
      = f.input :password,                              
        required: false,                                
        input_html: { autocomplete: "current-password" }
      = f.input :remember_me, as: :boolean
    .form-actions
      = f.button :submit, "Log in"
    = link_to 'Not having an account, Join', new_user_registration_path, class: 'black'